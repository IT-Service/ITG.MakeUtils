# $1 - source .sfd file name
# $2 - destination .sfd file name

Open($1)

SlantAngle = 75-90

SelectWorthOutputting()
CorrectDirection()
Transform( 100, 0,   100.0 * Tan( 3.141592653 / 180 * (-SlantAngle) ), 100,   0, 0 )
SetItalicAngle(SlantAngle)
CanonicalStart()

SetMacStyle(2)

# save sfd files
Save($2)
